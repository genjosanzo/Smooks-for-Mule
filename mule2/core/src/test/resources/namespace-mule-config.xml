<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
       xmlns:smooks="http://www.muleforge.org/smooks/schema/mule-module-smooks/1.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
       http://www.muleforge.org/smooks/schema/mule-module-smooks/1.0 ../../main/resources/META-INF/mule-module-smooks.xsd
       ">


    <description>
        This config for testing the namespace handler
    </description>

	<smooks:transformer
		name="smooksTransfomer"
		configFile="/transformer-smooks-config.xml"
		reportPath="target/smooks-report/report.html"
		executionContextAsMessageProperty="true"
		executionContextMessagePropertyKey="smooks.executionContext"
		excludeNonSerializables="false"
		resultType="JAVA"
		javaResultBeanId="a"
	/>

    <model name="test">
        <service name="TestUMO">
            <inbound>
                <vm:inbound-endpoint path="messageInput" transformer-refs="smooks"/>
            </inbound>

            <outbound>
            	<smooks:router
            		configFile="/transformer-smooks-config.xml"
					reportPath="target/smooks-report/report.html"
					executionContextAsMessageProperty="true"
					executionContextMessagePropertyKey="smooks.executionContext"
					excludeNonSerializables="true">

					<stdio:outbound-endpoint system="OUT" />
            	</smooks:router>
            </outbound>
        </service>
    </model>
</mule>
