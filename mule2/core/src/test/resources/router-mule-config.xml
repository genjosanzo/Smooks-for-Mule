<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd
       ">

    <description>
        This tests the routing component
    </description>

	<file:connector name="nonSerializingFileConnector" serialiseObjects="false"/>

    <model name="main">
        <service name="TestUMO">
            <inbound>
                <vm:inbound-endpoint path="messageInput"/>
            </inbound>

            <outbound>
            	<custom-outbound-router class="org.milyn.smooks.mule.Router">
            		<!-- Endpoints -->
            		<file:outbound-endpoint name="file1" path="target/routing-test" outputPattern="file1.dat" connector-ref="nonSerializingFileConnector"/>
            		<file:outbound-endpoint name="file2" path="target/routing-test" outputPattern="file2-${COUNT}.dat" connector-ref="nonSerializingFileConnector"/>

            		<!-- Properties -->
            		<spring:property name="smooksConfigFile" value="/router-smooks-config.xml" />
            		<spring:property name="reportPath" value="target/smooks-report/report.html" />
            		<spring:property name="executionContextAsMessageProperty" value="true" />
					<spring:property name="executionContextMessagePropertyKey" value="smooks.executionContext" />
					<spring:property name="excludeNonSerializables" value="true" />
            	</custom-outbound-router>
            </outbound>
        </service>

    </model>
</mule>
