	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>

		<moduleSet>
			<includes>
				<include>org.mule.modules.mule-module-smooks:smooks-4-mule-2</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>

						<includes>
							<include>src/**</include>
						</includes>
						<excludes>
							<exclude>**/assembly/**</exclude>
						</excludes>
					</fileSet>
