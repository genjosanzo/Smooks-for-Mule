<!--
Assembly descriptor for the full distribution.
-->
<assembly>
	<id>SmooksForMule2</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>

		<moduleSet>
			<includes>
				<include>org.mule.modules:mule2-module-smooks</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>

						<includes>
							<include>src/**</include>
						</includes>
						<excludes>
							<exclude>**/assembly/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>

			<binaries>
        		<outputDirectory>/lib/user/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<scope>runtime</scope>
						<useTransitiveFiltering>true</useTransitiveFiltering>
						<excludes>
							<exclude>org.freemarker:freemarker</exclude>
							<exclude>org.mvel:mvel</exclude>
							<exclude>org.mule:mule-core</exclude>
							<exclude>org.mule.modules:mule-module-spring-config</exclude>
							<exclude>hsqldb:hsqldb</exclude>
							<exclude>log4j:log4j</exclude>
							<exclude>slf4j</exclude>
							<exclude>com.thoughtworks.xstream:xstream</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>

			</binaries>
		</moduleSet>

		<moduleSet>
			<includes>
				<include>org.mule.modules:mule2-module-smooks-examples-edi-to-java-transformation</include>
			</includes>
			<sources>
				<outputDirectoryMapping>/examples/edi-to-java-transformation/</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<includes>
							<include>src/**</include>
							<include>conf/**</include>
							<include>data/**</include>
							<include>run*</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>/dist</directory>
						<includes>
							<include>README*</include>
							<include>build.xml</include>
						</includes>
					</fileSet>
				</fileSets>

			</sources>

			<binaries>
        		<outputDirectory>/examples/edi-to-java-transformation/lib/user/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<scope>runtime</scope>
						<useTransitiveFiltering>true</useTransitiveFiltering>
						<excludes>
							<exclude>commons-lang</exclude>
							<exclude>commons-logging</exclude>
							<exclude>xmlbeans:xmlbeans-jsr173-api</exclude>
							<exclude>org.mule.modules:mule2-module-smooks:jar</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

		<moduleSet>
			<includes>
				<include>org.mule.modules:mule2-module-smooks-examples-basic-transformation</include>
			</includes>
			<sources>
				<outputDirectoryMapping>/examples/basic-transformation/</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<includes>
							<include>src/**</include>
							<include>conf/**</include>
							<include>data/**</include>
							<include>run*</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>/dist</directory>
						<includes>
							<include>README*</include>
							<include>build.xml</include>
						</includes>
					</fileSet>
				</fileSets>

			</sources>

			<binaries>
        		<outputDirectory>/examples/basic-transformation/lib/user/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<scope>runtime</scope>
						<useTransitiveFiltering>true</useTransitiveFiltering>
						<excludes>
							<exclude>commons-lang</exclude>
							<exclude>commons-logging</exclude>
							<exclude>org.mule.modules:mule2-module-smooks:jar</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

		<moduleSet>
			<includes>
				<include>org.mule.modules:mule2-module-smooks-examples-basic-routing</include>
			</includes>
			<sources>
				<outputDirectoryMapping>/examples/basic-routing/</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<includes>
							<include>src/**</include>
							<include>conf/**</include>
							<include>data/**</include>
							<include>run*</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>/dist</directory>
						<includes>
							<include>README*</include>
							<include>build.xml</include>
						</includes>
					</fileSet>
				</fileSets>

			</sources>

			<binaries>
        		<outputDirectory>/examples/basic-transform/lib/user/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<scope>runtime</scope>
						<useTransitiveFiltering>true</useTransitiveFiltering>
						<excludes>
							<exclude>commons-lang</exclude>
							<exclude>commons-logging</exclude>
							<exclude>org.mule.modules:mule2-module-smooks:jar</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>dist</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
				<include>README*</include>
				<include>build.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>