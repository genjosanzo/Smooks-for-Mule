<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"
	xmlns:xsl="http://www.milyn.org/xsd/smooks/xsl-1.1.xsd">

	<!--
		On the "b" element, when it is a child of the "c" element,
		a XSLT transformation is done using the defined xsl file.
	 -->
    <xsl:xsl applyOnElement="c/b">
        <xsl:template>/transforms/BasicXslTransform.xsl</xsl:template>
    </xsl:xsl>

</smooks-resource-list>
